{
  "name": "laascloud-dev-tool",
  "version": "1.0.41",
  "description": "Code, track, measure your dev effort.",
  "main": "main.js",
  "productName": "Dev Workout",
  "publisherName": "LaaS Cloud OÜ",
  "scripts": {
    "test": "mocha",
    "coverage": "nyc --reporter html --reporter text npm test",
    "start": "electron .",
    "pack": "build --dir",
    "dist:patch": "npm version patch && electron-builder",
    "dist:minor": "npm version minor && build",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder",
    "release": "electron-builder",
    "apply-version": "echo $npm_package_version && find . -path ./node_modules -prune -o -name \"*.js\" -print0 | xargs -0 sed -i '' -e \"s/const X_APP_VERSION \\=.*/const X_APP_VERSION \\= '$npm_package_version'/g\"",
    "rc": "date && npm version patch && npm run apply-version && git commit -a -m 'release candidate' && git push origin && git push origin --tags"
  },
  "author": "LaaS Cloud OÜ",
  "license": "ISC",
  "build": {
    "appId": "ee.laascloud.apps.devworkout",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "app/build/icon.png",
      "publish": [
        "github"
      ]
    },
    "win": {
      "icon": "app/build/icon.png",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "icon": "app/build/icon.png",
      "publish": [
        "github"
      ]
    }
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^6.1.0",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "rollup": "^2.32.1",
    "terser": "^5.3.8",
    "tslib": "^2.0.3",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.5",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "mocha": "8.2.1",
    "nyc": "14.1.x",
    "sinon": "^9.0.0",
    "ts-node": "9.0.0",
    "eslint": "7.12.1",
    "@typescript-eslint/parser": "4.6.1",
    "@typescript-eslint/eslint-plugin": "4.6.1",
    "@types/mocha": "8.0.3",
    "@types/chai": "4.2.14",
    "@types/chai-as-promised": "7.1.3",
    "@types/sinon": "9.0.8",
    "three": "^0.137.4",
    "@types/three": "^0.137.0",
    "@types/node": "17.0.23",
    "electron-builder": "23.6.0",
    "electron": "^20.1.0",
    "replace-in-file": "7.1.0"
  },
  "dependencies": {
    "electron-store": "8.1.0",
    "node-fetch": "2.6.6",
    "crypto-js": "4.1.1",
    "electron-prompt": "1.7.0",
    "body-parser": "^1.20.0",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "ws": "8.12.1",
    "moment": "2.29.4",
    "axios": "^1.4.0",
    "electron-log": "^4.4.8"
  },
  "nyc": {
    "check-coverage": true,
    "branches": 100,
    "lines": 100,
    "functions": 100,
    "statements": 100,        
    "exclude": [
      "**/*.d.ts",      
      "**/*.notest.ts",
      "**/*.mock.ts",
      "**/*.test.ts",
      "**/*.mock.js", 
      "**/*.test.js"
    ]    
  }
}
